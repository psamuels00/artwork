{
  "name": "artwork",
  "version": "1.0.0",
  "description": "Perrin's Artwork",
  "main": "index.js",
  "scripts": {
    "build": "tailwindcss -i ./src/_includes/css/global.css -o global.out.css && npx @11ty/eleventy",
    "css": "tailwindcss -i ./src/_includes/css/global.css -o global.out.css --watch",
    "debug": "concurrently \"tailwindcss -i ./src/_includes/css/global.css -o global.out.css --watch\" \"DEBUG=Eleventy* npx @11ty/eleventy --serve\"",
    "develop": "concurrently \"tailwindcss -i ./src/_includes/css/global.css -o global.out.css --watch\" \"npx @11ty/eleventy --serve\"",
    "prod": "concurrently \"npx @11ty/eleventy\" \"tailwindcss -i ./src/_includes/css/global.css -o ./_site/global.css --minify\"",
    "start": "npx @11ty/eleventy --serve",
    "test": "concurrently \"npx http-server -p 8080 ./dist\" \"npx linkinator http://0.0.0.0:8080 --skip https://www.linkedin.com/in/PerrinSamuels/ --recurse && exit 0 || exit 1\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "concurrently": "^8.2.2",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "http-server": "^14.1.1",
    "image-size": "^1.1.1",
    "linkinator": "^6.0.4"
  }
}
