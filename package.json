{
  "name": "artwork",
  "version": "1.0.0",
  "description": "Perrin's Artwork",
  "scripts": {
    "build-color": "tailwindcss -i ./src/_includes/css/global.css -o build/global.css --minify && COLOR_PORTFOLIO=1 npx @11ty/eleventy --output=dist/color --pathprefix=color/",
    "build": "tailwindcss -i ./src/_includes/css/global.css -o build/global.css --minify && npx @11ty/eleventy",
    "css": "tailwindcss -i ./src/_includes/css/global.css -o build/global.css --minify --watch",
    "debug": "concurrently \"tailwindcss -i ./src/_includes/css/global.css -o build/global.css --minify --watch\" \"DEBUG=Eleventy* npx @11ty/eleventy --serve\"",
    "develop": "concurrently \"tailwindcss -i ./src/_includes/css/global.css -o build/global.css --minify --watch\" \"npx @11ty/eleventy --serve\"",
    "favicons": "node src/_eleventy/make-favicons.js",
    "start": "npx @11ty/eleventy --serve",
    "test": "concurrently \"npx http-server -p 8081 ./dist\" \"npx linkinator http://0.0.0.0:8081 --skip '^https://(www.linkedin.com|perrins-art.com)/' --recurse; rc=$?; kill -2 \\`lsof -i:8081 -t\\` || true; exit $rc\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@11ty/eleventy": "3.0.0-alpha.4",
    "@11ty/eleventy-img": "^3.1.8",
    "@quasibit/eleventy-plugin-sitemap": "^2.2.0",
    "concurrently": "^8.2.2",
    "favicons": "^7.1.5",
    "hammerjs": "^2.0.8",
    "html-minifier-terser": "^7.2.0",
    "http-server": "^14.1.1",
    "image-size": "^1.1.1",
    "linkinator": "^6.0.4",
    "outdent": "^0.8.0",
    "tailwindcss": "^3.4.1"
  }
}
